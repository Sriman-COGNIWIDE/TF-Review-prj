{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "VPCEndpointAccess",
        "Effect": "Allow",
        "Principal": "*",
        "Action": [
          "s3:GetObject",
          "s3:PutObject",
          "s3:DeleteObject",
          "s3:ListBucket",
          "s3:GetBucketLocation"
        ],
        "Resource": [
          "${bucket_arn}",
          "${bucket_arn}/*"
        ],
        "Condition": {
          "StringEquals": {
            "aws:SourceVpce": "${vpc_endpoint_id}"
          },
          "IpAddress": {
            "aws:SourceIp": ${jsonencode(allowed_ip)}
          }
        }
      }
    ]
  }